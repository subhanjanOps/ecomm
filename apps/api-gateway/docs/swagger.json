{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "The Ecomm API Gateway provides a unified entrypoint that proxies requests to onboarded backend services.",
        "title": "Ecomm API Gateway",
        "termsOfService": "https://example.com/terms/",
        "contact": {
            "name": "Ecomm Platform Team",
            "url": "https://example.com/support",
            "email": "ops@example.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/admin/services": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "admin"
                ],
                "summary": "List services",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/registry.Service"
                            }
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "tags": [
                    "admin"
                ],
                "summary": "Create service",
                "parameters": [
                    {
                        "description": "Service payload",
                        "name": "payload",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/admin.CreateServiceRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/registry.Service"
                        }
                    },
                    "400": {
                        "description": "bad request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "unauthorized",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "internal error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/admin/services/{id}": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "admin"
                ],
                "summary": "Get service by ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Service ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/registry.Service"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "put": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "tags": [
                    "admin"
                ],
                "summary": "Update service",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Service ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Service",
                        "name": "payload",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/registry.Service"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/registry.Service"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "delete": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": [
                    "admin"
                ],
                "summary": "Delete service",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Service ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/admin/services/{id}/refresh": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": [
                    "admin"
                ],
                "summary": "Refresh service swagger",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Service ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/registry.Service"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "502": {
                        "description": "bad gateway",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "admin.CreateServiceRequest": {
            "type": "object",
            "properties": {
                "base_url": {
                    "type": "string",
                    "example": "http://user-service:8081"
                },
                "description": {
                    "type": "string",
                    "example": "Manages users"
                },
                "enabled": {
                    "type": "boolean",
                    "example": true
                },
                "grpc_target": {
                    "description": "GRPCTarget is required when Protocol is \"grpc-json\" (format host:port)",
                    "type": "string",
                    "example": "user-service:9090"
                },
                "name": {
                    "type": "string",
                    "example": "User Service"
                },
                "protocol": {
                    "description": "Protocol: \"http\" (default) uses reverse proxy; \"grpc-json\" enables HTTP→gRPC transcoding",
                    "type": "string",
                    "example": "http"
                },
                "public_prefix": {
                    "type": "string",
                    "example": "/api/users/"
                },
                "swagger_url": {
                    "type": "string",
                    "example": "http://user-service:8081/swagger.json"
                }
            }
        },
        "registry.Service": {
            "type": "object",
            "properties": {
                "base_url": {
                    "type": "string",
                    "example": "http://user-service:8081"
                },
                "created_at": {
                    "type": "string",
                    "example": "2025-11-22T10:00:00Z"
                },
                "description": {
                    "type": "string",
                    "example": "Manages users"
                },
                "enabled": {
                    "type": "boolean",
                    "example": true
                },
                "grpc_target": {
                    "description": "GRPCTarget is host:port of the upstream gRPC service when Protocol is \"grpc-json\".",
                    "type": "string",
                    "example": "user-service:9090"
                },
                "id": {
                    "type": "string",
                    "example": "3d1a7e94-0a2f-4a49-9a9b-8f9f2d0c6f67"
                },
                "last_health_at": {
                    "type": "string",
                    "example": "2025-11-22T10:20:00Z"
                },
                "last_refreshed_at": {
                    "type": "string",
                    "example": "2025-11-22T10:20:30Z"
                },
                "last_status": {
                    "type": "string",
                    "example": "Healthy"
                },
                "name": {
                    "type": "string",
                    "example": "User Service"
                },
                "protocol": {
                    "description": "Protocol decides how the gateway forwards requests: \"http\" (default) or \"grpc-json\" (HTTP→gRPC transcoding).",
                    "type": "string",
                    "example": "http"
                },
                "public_prefix": {
                    "type": "string",
                    "example": "/api/users/"
                },
                "swagger_json": {},
                "swagger_url": {
                    "type": "string",
                    "example": "http://user-service:8081/swagger.json"
                },
                "updated_at": {
                    "type": "string",
                    "example": "2025-11-22T10:10:00Z"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}